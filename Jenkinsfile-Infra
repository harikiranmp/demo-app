pipeline {
    agent any

    parameters {
        booleanParam(name: 'APPLY', defaultValue: false, description: 'Apply changes automatically?')
    }

    stages {
        stage('Cleanup') {
            steps {
                sh '''
                  echo "ðŸ§¹ Cleaning previous Terraform state cache..."
                  rm -rf .terraform .terraform.lock.hcl || true
                '''
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/dineshpardhu-210/sample-app.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh '''
                  terraform init -input=false -reconfigure
                '''
            }
        }

        stage('Terraform Plan') {
            steps {
                sh '''
                  terraform plan -input=false -out=tfplan \
                    -var="aws_region=$us-east-1"
                '''
            }
        }

        stage('Terraform Apply') {
            when {
                expression { return params.APPLY == true }
            }
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        always {
            sh 'terraform output || true'
        }
    }
}
