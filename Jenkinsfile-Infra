pipeline {
    agent any

    parameters {
        booleanParam(name: 'APPLY', defaultValue: false, description: 'Apply changes automatically?')
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/harikiranmp/demo-app.git'
            }
        }

        stage('Debug Git Remote') {
            steps {
                sh '''
                  echo "🔍 Checking git remote origin URL:"
                  git remote -v
                  echo "🔍 Current branch:"
                  git branch
                  echo "🔍 Last 3 commits:"
                  git log -3 --oneline
        '''
            }
        }

        stage('Terraform Init') {
            steps {
                sh '''
                  terraform init -input=false -reconfigure
                '''
            }
        }

        stage('Terraform Plan') {
            steps {
                sh '''
                  terraform plan -input=false -out=tfplan \
                    -var="aws_region=us-east-1"
                '''
            }
        }

        stage('Terraform Apply') {
            when {
                expression { return params.APPLY == true }
            }
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        always {
            sh 'terraform output || true'
        }
    }
}
